/**
 * @file Firestore Security Rules for Momentum Application
 * @version 2
 *
 * @Core Philosophy:
 *   This ruleset enforces a strict user-ownership model. Each user has full
 *   control over their own data, and no access to other users' data.
 *
 * @Data Structure:
 *   All data is nested under /users/{userId}, ensuring data isolation and
 *   simplifying authorization logic.  The following collections are created
 *   for each user: habits, routines, tasks, goals, moods, transactions,
 *   budgets, shoppingLists, purchaseHistory and files.
 *
 * @Key Security Decisions:
 *   - User data is completely private; listing all users is disallowed.
 *   - All write operations are restricted to the owner of the data.
 *   - Data consistency is enforced between the path and the document's internal user ID.
 *   - The rules do NOT validate data types or enforce specific schema requirements,
 *     allowing for flexible data structures during prototyping.
 *
 * @Denormalization for Authorization:
 *   The data structure is designed to store user-specific data under the /users/{userId} path.
 *   This enables path-based authorization, eliminating the need for additional reads or complex queries
 *   to verify ownership.  The rules directly compare request.auth.uid with the userId parameter in the path.
 *
 * @Structural Segregation:
 *   User-specific data (habits, routines, tasks, etc.) is stored in dedicated subcollections
 *   under the /users/{userId} document. This segregation ensures that data with similar access needs
 *   are grouped together, simplifying security rules and improving performance.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by a signed-in user.
     * @returns {boolean} True if the user is signed in, false otherwise.
     * @example isSignedIn() == true
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @param {string} userId - The user ID to compare against the authenticated user ID.
     * @returns {boolean} True if the user IDs match, false otherwise.
     * @example isOwner("user123") == true
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of an existing document.
     * @param {string} userId - The user ID to compare against the authenticated user ID.
     * @returns {boolean} True if the user IDs match and the document exists, false otherwise.
     * @example isExistingOwner("user123") == true
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Enforces that the request is made by the document's owner and that the `userId` field in the
     *   data matches the `userId` in the path.  This function is specifically for `create` operations, where
     *   `resource` is not yet available.
     * @param {string} userId - The user ID from the path.
     * @returns {boolean} True if the user is the owner and the `userId` field is consistent.
     * @example isValidNewOwner("user123") == true
     */
    function isValidNewOwner(userId) {
      return isOwner(userId) && request.resource.data.userId == userId;
    }

    /**
     * @description Enforces that the request is made by the document's owner, the document exists, and the `userId`
     *   field in the data matches the `userId` in the existing document. This function is specifically for `update`
     *   operations, where `resource` represents the existing document.
     * @param {string} userId - The user ID from the path.
     * @returns {boolean} True if the user is the owner, the document exists, and the `userId` field is consistent.
     * @example isValidExistingOwner("user123") == true
     */
    function isValidExistingOwner(userId) {
      return isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
    }

    /**
     * @description Rules for the /users/{userId} document.
     * @path /users/{userId}
     * @allow (create) User "user123" can create their own profile.
     * @deny (create) User "user456" cannot create a profile for "user123".
     * @allow (get, update, delete) User "user123" can read/update/delete their own profile.
     * @deny (get, update, delete) User "user456" cannot read/update/delete "user123"'s profile.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/habits/{habitId} collection.
     * @path /users/{userId}/habits/{habitId}
     * @allow (create) User "user123" can create a habit in their own profile.
     * @deny (create) User "user456" cannot create a habit in "user123"'s profile.
     * @allow (get, update, delete) User "user123" can read/update/delete their own habit.
     * @deny (get, update, delete) User "user456" cannot read/update/delete "user123"'s habit.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/habits/{habitId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isValidNewOwner(userId);
      allow update: if isValidExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/routines/{routineId} collection.
     * @path /users/{userId}/routines/{routineId}
     * @allow (create) User "user123" can create a routine in their own profile.
     * @deny (create) User "user456" cannot create a routine in "user123"'s profile.
     * @allow (get, update, delete) User "user123" can read/update/delete their own routine.
     * @deny (get, update, delete) User "user456" cannot read/update/delete "user123"'s routine.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/routines/{routineId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isValidNewOwner(userId);
      allow update: if isValidExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/tasks/{taskId} collection.
     * @path /users/{userId}/tasks/{taskId}
     * @allow (create) User "user123" can create a task in their own profile.
