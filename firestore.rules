    }

    /**
     * @description Rules for the /users/{userId}/moods/{moodId} collection.
     * @path /users/{userId}/moods/{moodId}
     * @allow (create) User "user123" can create a mood entry in their own profile.
     * @deny (create) User "user456" cannot create a mood entry in "user123"'s profile.
     * @allow (get, update, delete) User "user123" can read/update/delete their own mood entry.
     * @deny (get, update, delete) User "user456" cannot read/update/delete "user123"'s mood entry.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
     */
    match /users/{userId}/moods/{moodId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isValidNewOwner(userId);
      allow update: if isValidExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/transactions/{transactionId} collection.
     * @path /users/{userId}/transactions/{transactionId}
     * @allow (create) User "user123" can create a transaction in their own profile.
     * @deny (create) User "user456" cannot create a transaction in "user123"'s profile.
