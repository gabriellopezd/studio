    match /users/{userId}/transactions/{transactionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isValidNewOwner(userId);
      allow update: if isValidExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/budgets/{budgetId} collection.
     * @path /users/{userId}/budgets/{budgetId}
     * @allow (create) User "user123" can create a budget in their own profile.
     * @deny (create) User "user456" cannot create a budget in "user123"'s profile.
     * @allow (get, update, delete) User "user123" can read/update/delete their own budget.
     * @deny (get, update, delete) User "user456" cannot read/update/delete "user123"'s budget.
     * @principle Enforces document ownership for writes and restricts access to a user's own data tree.
